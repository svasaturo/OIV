	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	cmisQueryName="jconon_application:aspect_servizioCNRWithoutDirettore" 
	cmisTypeName="P:jconon_application:aspect_servizioCNRWithoutDirettore" 
	longDescription="Aspect Servizio CNR senza direttore" 
	shortDescription="Aspect Servizio CNR senza direttore" 
	xsi:schemaLocation="http://www.cnr.it/schema/BulkInfo_v2 BulkInfo_v2">

	<fieldProperty 
		inputType="RADIOGROUP" 
		label="text.jconon_application_servizioCNR" 
		name="fl_servizioCNR" 
		property="jconon_application:fl_servizioCNR" 
		widget="ui.radio">
		<jsonlist>
			<listElement defaultLabel="Y" key="true" label="label.option.yes"/>
			<listElement defaultLabel="N" key="false" label="label.option.no"/>
		</jsonlist>
		<jsonvalidator requiredWidget="true"/>
	</fieldProperty>
	<fieldProperty 
		inputType="TEXT" 
		label="label.jconon_application_struttura_cnr" 
		name="struttura_cnr" 
		property="jconon_application:struttura_cnr">
